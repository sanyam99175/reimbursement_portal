<div class="card col-6 offset-3 mb-4" style="width: 50%; background-color: #8A9A5B;">
  <div class="card-body">
    <h3 class="text-white">Edit Company</h3>
  </div>
</div>
<% if @company.errors.any? %>
  <% @company.errors.full_messages.each do |message|%>
     <div class="alert alert-danger"><%= message %></div>
  <%end%>
<%end%>
<div class="col-6 offset-3">
    <%= form_with(model: @company, local: true) do |f| %>
        <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        </div>
    
        <div class="form-group">
        <%= f.submit 'Update Company', class: 'btn text-white', style: 'background-color: #8A9A5B;' %>
        </div>
    <% end %>
</div>
