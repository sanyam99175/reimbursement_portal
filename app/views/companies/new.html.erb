<div class="card col-6 offset-3 mb-4" style="width: 50%; background-color: #8A9A5B;">
  <div class="card-body">
    <h3 class="text-white">New Company</h3>
  </div>
</div>
<% if @company.errors.any? %>
  <% @company.errors.full_messages.each do |message|%>
     <div class="alert alert-danger"><%= message %></div>
  <%end%>
<%end%>
<div class="col-6 offset-3">
    <%= form_with(model: @company, local: true) do |form| %>
        <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
        <%= form.submit 'Create Company', class: 'btn text-white', style: 'background-color: #8A9A5B;' %>
        <%= link_to "Back to Companies", companies_path, class:'btn text-white', style:'background-color: #8A9A5B;'%>
        </div>
    <% end %>
</div>
