<div class="card col-6 offset-3 mb-4" style="width: 50%; background-color: #8A9A5B;">
  <div class="card-body">
    <h3 class="text-white">Forgot your password?</h3>
  </div>
</div>
<div class="col-6 offset-3">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group actions">
      <%= f.submit "Send me reset password instructions", class: 'btn', style: 'background-color: #8A9A5B;' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
